<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_splash"
    android:gravity="center|bottom"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView_wait"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Loading, Plase Wait !"
        android:textSize="15dp"
        android:visibility="invisible" />

    <ProgressBar
        android:id="@+id/progressBar_splash"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="80dp"
        android:max="100"
        android:visibility="invisible" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom|center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView_myInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="@string/MyInfo"
            android:textColor="#FFFFFF"
            android:textSize="20dip"
            android:typeface="normal" />

        <TextView
            android:id="@+id/textView_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25dp"
            android:text="@string/VersionInfo"
            android:textColor="#FFFFFF" />
    </LinearLayout>

</LinearLayout>