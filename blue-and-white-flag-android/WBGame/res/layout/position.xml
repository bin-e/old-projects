<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/Layout_Position"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/screen_new"
    android:orientation="vertical" >

    <!-- android:background="@drawable/time" -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal" >
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn_wu"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/w_u"
            android:text="" />

        <Button
            android:id="@+id/button2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="Button"
            android:visibility="invisible" />

        <Button
            android:id="@+id/button3"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="Button"
            android:visibility="invisible" />

        <Button
            android:id="@+id/btn_bu"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/b_u"
            android:text="" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn_w"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/w_f"
            android:text="" />

        <Button
            android:id="@+id/button2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="Button"
            android:visibility="invisible" />

        <Button
            android:id="@+id/button3"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="Button"
            android:visibility="invisible" />

        <Button
            android:id="@+id/btn_b"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/b_f"
            android:text="" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn_wd"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/w_d"
            android:text="" />

        <Button
            android:id="@+id/button2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="Button"
            android:visibility="invisible" />

        <Button
            android:id="@+id/button3"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="Button"
            android:visibility="invisible" />

        <Button
            android:id="@+id/btn_bd"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/b_d"
            android:text="" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="bottom|left"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn_Start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/img_start" />
    </LinearLayout>

</LinearLayout>